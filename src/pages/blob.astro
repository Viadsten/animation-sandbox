---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Brick wave">
	<main>
    <div class="scene-container" data-scene="blob"></div>
    <canvas id="paper-canvas"></canvas>
	</main>
</Layout>

<style>
  body {
    overflow: hidden;
  }

  .scene-container {
    min-height: 100vh;
    background-color: #333;
    /* overflow: hidden; */
    opacity: 0;
  }

  #paper-canvas {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    height: 100vh;
    /* opacity: 0; */
  }
</style>